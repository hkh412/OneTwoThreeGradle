<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:paddingLeft="8.6dp"
	 android:paddingRight="8.6dp"
	 android:paddingTop="5.6dp"
     android:orientation="vertical">
     
    <LinearLayout 
      	android:id="@+id/layout_detail_author"
      	android:layout_width="wrap_content"
  		android:layout_height="wrap_content">
	  	<ImageView 
	  	    android:id="@+id/img_detail_level"
	  	    style="@style/AvatarImg"
	  	    />
	  	<TextView 
	       	android:id="@+id/tv_board_cont_author"
	       	android:layout_width="wrap_content"
		   	android:layout_height="wrap_content"
		   	android:textIsSelectable="true"
		   	android:textSize="13sp"
		   	android:textColor="#0b7ab3"
		   	/>
	</LinearLayout>
 
 	<TextView 
  		android:id="@+id/tv_board_cont_title"
	   	android:layout_width="wrap_content"
	   	android:layout_height="wrap_content"
	   	android:textIsSelectable="true"
       	android:textSize="17sp"
       	android:textStyle="bold"
	   	android:textColor="#343434"
	   	/>
 	
 	<LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
	        
        <!-- 작성일 -->
        <TextView
            android:id="@+id/tv_board_cont_date"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:textIsSelectable="true"
	        android:textSize="12sp"
	        android:textColor="#9b9b9b"
	        />
	        
        <View 
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
	        
        <!-- 조회수 -->
        <TextView 
            android:id="@+id/tv_head_viewcnt"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:textIsSelectable="true"
	        android:text="120"
	        android:gravity="right"
	        android:textSize="12sp"
	        android:textColor="#ea3f03"
	        android:textStyle="bold"
	        />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginTop="3dp"
        android:background="#dbdbdb"
         />
</LinearLayout>
